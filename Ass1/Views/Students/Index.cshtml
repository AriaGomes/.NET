@model Assign1.Models.ViewModels.CommunityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="EditMemberships" asp-route-id="@item.ID">Edit Memberships</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (Model.CommunityMemberships != null)
{
    <h1>Members of the following communities </h1>
    <table class="table table-dark">
        <tbody>

            @if (Model.CommunityMemberships.Count() != 0)
            {
                <tr>
                    <th>
                        Name
                    </th>
                </tr>
                @foreach (var item in Model.CommunityMemberships)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Community.Title)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <th>
                        No membership record exist
                    </th>
                </tr>
            }

        </tbody>
    </table>
}
