@model Assign1.Models.Community

<h1>Upload</h1>

<h4>Upload a Advertisement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data" asp-route-id="@Model.ID">
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="adImage" type="file">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}